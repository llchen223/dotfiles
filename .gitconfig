[user]
	name = Simon Lydell
	email = simon.lydell@gmail.com
[core]
	editor = gvim -f
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=2 -R
[merge]
	tool = gvimdiff
[color]
	ui = true
[credential]
	helper = cache
[push]
	default = current
[log]
	date = iso
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
