#!/usr/bin/env bash

rsync --archive ~/ "/media/$USER/backup/$(uname --nodename)/home" \
  --delete --backup \
  --progress --human-readable \
  --exclude /.cache/ \
  --exclude /.cordova/ \
  --exclude /.gradle/ \
  --exclude /.node-gyp/ \
  --exclude /.npm/ \
  --exclude /.plugman/ \
  --exclude /.tmp/ \
  --exclude /.vim/ \
  --exclude /programs/ \
  --exclude /tmp/ \
  --exclude bower_components/ \
  --exclude CACHE/ \
  --exclude node_modules/ \
  --exclude .venv/ \
  --exclude __pycache__/ \
  --exclude '*.nb.*' \
  "$@"
