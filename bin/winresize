#!/usr/bin/env bash

r=$(wmctrl -d | grep '*' | cut -f 12 -d ' ')

w=$(echo $r | cut -f 1 -d x)
h=$(echo $r | cut -f 2 -d x)

x=0
y=0

case $1 in
  left)
    w=$(expr $w / 2)
    ;;
  right)
    x=$w
    w=$(expr $w / 2)
    ;;
  max)
    ;;
  *)
    echo "Unknown location"
    exit 1
esac

wmctrl -r :ACTIVE: -e 0,$x,$y,$w,$h
